<div class="container-fluid">
	<div class="row">
    	<div class="col-lg-10">

			<div class="jumbotron"> 
				
				<font face="arial" size="7" color="orange"> Publicar una gauchada </font>

				<% if (current_user.puntos) >=  1 %>

					<%= form_for(@favor) do |f| %>

						<% if @favor.errors.any? %>
				  			<div id="error_explanation">
				    			<h2><%= pluralize(@favor.errors.count, "error") %> Esta publicacion no se ha guardado:</h2>
				    			<ul>
				    				<% @favor.errors.full_messages.each do |msg| %>
				      					<li><%= msg %></li>
				    				<% end %>
				    			</ul>
				  			</div>
						<% end %>
						
						<p>
							<%= f.label :titulo %>
							<%= f.text_field :titulo, class: 'form-control', label: 'Titulo de la gauchada', placeholder: 'Ingrese el tÃ­tulo'  %>
						</p>
						<p>
							 <%= f.label :descripcion %>
				             <%= f.text_area :descripcion, class: 'form-control', label: 'Descripcion', placeholder: 'Ingrese la descripcion' %>
						</p>
						<p>
							<%= f.label :localidad%>
							<%= f.text_field :localidad, class: 'form-control', label: 'Ciudad', placeholder: 'Ingrese la ciudad' %>
						</p>
						<p>
							<%= f.label :imagen%>
							<%= f.text_field :imagen, class: 'form-control', label: 'URL imagen', placeholder: 'Ingrese el link de la imagen' %>
						</p>


						<%= f.submit 'Guardar' %>
						
				    <% end %>

				<% else %>
					<p>
						<a class="btn btn-default btn-lg" href="/cards/new" role="button">
							Comprar puntos
		            	</a>
					</p>
				<% end %>
		 

				<p>

					<%= link_to "Volver al listado de gauchadas", href="/favors" %>
					
				</p> 
						

			</div>
		</div>
	</div>
	
</div> 