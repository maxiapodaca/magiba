<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6 col-md-4"></div>
  <div class="col-xs-6 col-md-4"><h2>Modificar datos <%= current_user.name %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
<div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :Apellido %><br />
    <%= f.text_field :apellido, autofocus: true %>
  </div>
  
   <div class="field">
    <%= f.label :Telefono %><br />
    <%= f.text_field :telefono, autofocus: true %>
  </div>
 

<div class="field">
 
    <%= f.label :Localidad %><br />
    <%= f.text_field :localidad, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :DNI %><br />
    <%= f.text_field :dni, autofocus: true %>
  </div>

  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Contrase単a %> <i>(Dejar este espacio en blanco si no desea cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres como minimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contrase単a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :contrase単a_actual %> <i>(Necesitamos su contrase単a actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Listo" %>
  </div>
    
</div>
    

<div class="actions">
<%= link_to "Atras", root_path , class:'btn btn-default' %>
</div>

</div>

  <div class="col-xs-6 col-md-4"> <%= link_to "Cambiar mi contrasena", edit_user_password_path(resource_name) %><br />
  <% end %></div>



  </div>
</div>



