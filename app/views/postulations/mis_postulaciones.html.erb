<% if user_signed_in? %>
	<div class="col-md-10">
		<div class="panel panel-default">
			<div class="panel-body">
				<h1 class="text-center">
					 <font color="black"> Favores en los que soy candidato </font>
				</h1>
				<div class="row">
		            <table class="table table-hover">
		                <tr>
		                	<th>
		                        <font face="arial" size="4" color="grey"> Imagen </font>
		                    </th>
		                    <th>
		                        <font face="arial" size="4" color="grey"> Titulo </font>
		                    </th>
		                    <th>
		                        <font face="arial" size="4" color="grey"> Detalle </font>
		                    </th>
		                    <th>
		                        <font face="arial" size="4" color="grey"> Ciudad </font>
		                    </th>
		                    <th>
		                        <font face="arial" size="4" color="grey"> Descripcion de postulacion </font>
		                    </th>
		                </tr>
		                
		                <% @my_postulations.each do |p| %>
		                    <tr>
		                        <td>
		                            <font face="arial" size="3" color="black">
		                                <%= image_tag p.favor.imagen, size: '50x50' %>
		                            </font>
		                        </td>
		                        <td>
		                            <font face="arial" size="3" color="black">
		                                <%= p.favor.titulo %>
		                            </font>
		                        </td>
		                        <td>
		                            <font face="arial" size="3" color="black">
		                                <%= p.favor.descripcion.truncate(50) %>
		                            </font>
		                        </td>
		                        <td>
		                            <font face="arial" size="3" color="black">
		                                <%= p.favor.localidad %>
		                            </font>
		                        </td> 
		                        <td>
		                            <font face="arial" size="3" color="black">
		                                <%= p.descripcion %>
		                            </font>
		                        </td>
		                        <td>
		                            <font face="arial" size="3" color="black">
		                                <%= p.fecha %>
		                            </font>
		                        </td>
		                        <td>
	                                <font face="arial" size="3" color="black"> 
	                                        <%= link_to "Ver detalle", p.favor %>
	                                </font>
	                            </td>                    
		                    </tr>
		                <% end %>     
		            </table>		        
				</div>
			</div>
		</div>
	</div>
<% end %>	