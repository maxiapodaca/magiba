<div class="col-md-6 col-md-4 list group">  
  <div class="panel-group">
    <div class="panel panel-default">   
      <div class="panel-body">
          <h1 class="text-center"> Realizar compra de puntos </h1> 
		      <%= link_to "Volver al inicio", root_path, class: 'btn btn-info btn-xs' %>  
		      <%= form_for(@compra) do |f| %>
          	<% @compra.user_id=current_user.id %>
            <%= @compra.user_id %>
            <div class="row">
              <div class="col-md-3">
                <%= f.label :cantidad_de_puntos %>
                <%= f.text_field :cantidad_de_puntos, class: 'form-control', label: 'Cantidad de puntos', :cols => 5, :rows => 1 %>
              </div>
            </div>
            <p> </p>
            <%= f.select :precio_de_compra, options_for_select([['5'], ['10']])%>
            <div class="row">
              <div class="col-md-6">
                <%= f.label :Modo_de_pago %>d
              </div>
            </div>
            
            <%= f.submit "Confirmar compra", class: 'btn btn-primary' %>
            <% if @compra.errors.any? %>
              <ul>
                <% @compra.errors.each do |atributo, mensaje| %>
                  <li> <%= mensaje %> </li>
                <% end %>
              </ul>
            <% end %>
          <% end %>
		</div>
      </div>
    </div>
  </div>