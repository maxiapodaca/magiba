<div class="panel-group">

	<div class="col-md-10">
		<div class="panel panel-default">
			
			<div class="panel-body">

				<% if user_signed_in? %>
					<h1>
						Bienvenido a Gauchada! 
					</h1>
					<h2>
						<%= current_user.name %> <%= current_user.apellido %>
					</h2>
				<% else %>
					<h1>
						Bienvenido a Gauchada!
					</h1>
					<h2>
						Inicia sesión para ver todo el contenido y pedir gauchadas!
					</h2>
				<%end%>
			
			</div>

		</div>








		<div class="panel panel-default">
			<div class="panel-body">
				




					<div class="container-fluid">
					<div class="row">
				    <div class="col-md-10">

					<div class="jumbotron"> 
						<td> <P ALIGN=right>
							<% if user_signed_in? %>
					            <a class="btn btn-primary btn-lg" href="/favors/new" role="button">
					            	Publicá una gauchada!
					            </a>
					        <% end %>

				        <P ALIGN=left>

				        <p>


				        </p>
						
						<font face="arial" size="6" color="orange">
							A continuación se encuentra el listado de las gauchadas:
						</font>
						
						<p>

						</p>  
				  		<table class="table">

				 			<tr>
								<th>
									<font face="arial" size="5" color="orange"> Gauchadas </font>
								</th>
								<th>
									<font face="arial" size="5" color="orange"> Detalle  </font>
								</th>
							</tr>

							<% @favores = Favor.all.order(:id) %>
							<% @favores.each do |f| %>

								<tr> 
									<td>
										<font face="arial" size="3" color="black">
											<%= f.titulo %>
										</font>
									</td>
									<td>
										<font face="arial" size="3" color="black">
											<%= f.descripcion.truncate(50) %>
										</font>
									</td>

									<% if user_signed_in? %>
										<td>
											<font face="arial" size="3" color="black"> 
												<%= link_to "Ver detalle", f %>
											</font>
										</td>

										<% if current_user.admin? %>
										<td>
											<font face="arial" size="3" color="black">
												<%= link_to "Eliminar", f, method: :delete, data: { confirm: 'Esta seguro de eliminar la gauchada?' } %>
											</font>
										</td>
										<% end %>

									<% end %>
								</tr> 
					
							<% end %>

						</table>
						<p>
							<a class="btn btn-primary btn-lg" href="/" role="button"> Volver </a>
						</p> 
					</div>	
				</div>






			</div>

		</div>
	


	</div>

</div>

